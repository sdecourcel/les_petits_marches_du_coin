<h2>Nouvelle adresse</h2>

<%= simple_form_for @location, url: locations_path, method: "POST", remote: true do |f| %>
      <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: false, autofocus: true %>
    <%= f.input :address, required: true, autofocus: true %>
  </div>

  <div>
    <%= f.button :submit, "Sauvegarder" %>
  </div>
<% end %>
